<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fl_container"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/code_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/view_margin_small"
            android:layout_marginTop="@dimen/view_margin_small"
            android:layout_marginRight="@dimen/view_margin_small"
            android:background="@drawable/code_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="扫码支付"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/main_text_size"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_light"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/view_margin_tiny"
                android:text="临时车辆："
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/text_size_small"/>


            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/view_margin_tiny"
                android:text="收费金额："
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tv_in_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/view_margin_tiny"
                android:text="入场："
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/text_size_tiny"/>


            <TextView
                android:id="@+id/tv_cost_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/view_margin_tiny"
                android:text="停留："
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/text_size_tiny"/>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="@dimen/view_margin"
        android:layout_marginRight="@dimen/view_margin"
        android:layout_marginBottom="@dimen/tips_bottom"
        android:gravity="center"
        android:text="一路顺风"
        android:textColor="#fff"
        android:textSize="@dimen/welcome_text_size"
        android:visibility="gone"
        />


</FrameLayout>
